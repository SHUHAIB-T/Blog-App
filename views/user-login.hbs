<style>
  .error {
    color: red;
    padding: 5px 0px;
  }

  .labell {
    font-weight: 400;
    margin-top: 2px;
  }
</style>

<div class="h1 text-success my-5 d-flex p-2 justify-content-center align-items-center ">Welcome to BlogDoc </div>
<section class="vh-100">
  <div class="container-fluid h-70 ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5 d-flex justify-content-center align-items-center">
        <img src="https://img.freepik.com/free-vector/desktop-computer-vconcept-illustration_114360-12153.jpg"
          class="img-fluid" style="width: 25rem;" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 shadow-lg p-3 mb-5 bg-white rounded px-4 py-4">
        <div class="login d-flex justify-content-center align-items-center "><h4 class="card-title text-success fw-bold">Login</h4></div>
        <hr>
        <form action="/login" method="POST" id="loginForm">
          {{#if err}}
          <div class="form-control" style="border:none !important">
            <div class="err text-danger">
              <p>{{this.err}}</p>
            </div>
          </div>
          {{/if}}
          <!-- Email input -->
          <div class="form-outline mb-4">
            <h6 class="form-label labell text-success fw-normal" for="form3Example3">Email address</h6>
            <input type="email" id="form3Example3" name="Email" class="form-control form-control-lg"
              placeholder="Enter your Email" />
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <h6 class="form-label labell text-success fw-normal" for="form3Example4">Password</h6>
            <input type="password" id="form3Example4" name="Password" class="form-control form-control-lg"
              placeholder="Enter password" />
          </div>


          <div class="text-center text-lg-start mt-4 pt-2 d-flex justify-content-center align-items-center ">
            <button type="submit" class="btn btn-success btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
          </div>

        </form>
      </div>
    </div>

</section>

<script>
  $('#loginForm').validate({
    rules: {
      Email: {
        required: true,
      },
      Password: {
        required: true,
        minlength: 4
      }
    },
    messages: {
      required: "This field is requied",
      minlength: "minimumm 4 required"
    }
  });
</script>